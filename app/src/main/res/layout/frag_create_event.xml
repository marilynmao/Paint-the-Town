<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEventActivity">

    <EditText
        android:id="@+id/selectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:drawableLeft="@drawable/time"
        android:drawablePadding="10dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Select Time"
        android:inputType="text"
        android:textColor="#627FE4"
        android:textColorHint="#627FE4"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectDate" />

    <EditText
        android:id="@+id/newEventName"
        android:layout_width="204dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="45dp"
        android:drawableLeft="@drawable/pencil"
        android:drawablePadding="10dp"
        android:hint="Event Name"
        android:textColor="#627FE4"
        android:textColorHint="#627FE4"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/newEventInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createEventLabel" />

    <EditText
        android:id="@+id/newEventInfo"
        android:layout_width="207dp"
        android:layout_height="44dp"
        android:layout_marginStart="101dp"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:drawableLeft="@drawable/info"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Event Info"
        android:inputType="textMultiLine"
        android:textColor="#627FE4"
        android:textColorHint="#627FE4"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newEventName" />

    <EditText
        android:id="@+id/selectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/event"
        android:drawablePadding="10dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Select Date"
        android:inputType="text"
        android:textColor="#627FE4"
        android:textColorHint="#627FE4"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newEventInfo" />

    <Button
        android:id="@+id/createEventbtn"
        android:layout_width="146dp"
        android:layout_height="52dp"
        android:layout_marginTop="116dp"
        android:background="#627FE4"
        android:text="Create Event"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectTime"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/createEventLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Create an Event"
        android:textColor="#627FE4"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>